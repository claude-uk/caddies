<%= form_for(@cc_sequence) do |f| %>
  <% if @cc_sequence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cc_sequence.errors.count, "error") %> prohibited this cc_sequence from being saved:</h2>

      <ul>
      <% @cc_sequence.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :textid, 'Name' %><br />
    <%= f.text_field :textid, :autofocus => true %>
  </div>

  <div class="field">
    <%= f.label :parent_construct, 'Parent Component' %><br />
    <%= f.fields_for :cc_all do |cc_all_fields| %>
      <%= render :partial => "shared/spine_position_edit", :locals => {:f => cc_all_fields, :iparent => @cc_sequence.cc_all.initial_parent, :ib => @cc_sequence.cc_all.ifbranch} %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
