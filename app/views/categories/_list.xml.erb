<l:CategoryScheme versionDate="<%= DateTime.now %>">
	<r:URN>urn:ddi:<%= @instance.agency %>:<%= @instance.category_scheme %>:<%= @instance.version %></r:URN>
	<l:CategorySchemeName><r:String  xml:lang="en-GB"><%= instance.category_scheme %></r:String></l:CategorySchemeName>

<% @categories.each do |category| %>
		<l:Category>
			<r:URN>urn:ddi:<%= @instance.agency %>:<%= category.urn_id %>:<%= @instance.version %></r:URN>
			<l:CategoryName><r:String xml:lang="en-GB"><%= category.id %></r:String></l:CategoryName>
			<r:Label>
			  <r:Content xml:lang="en-GB"><%= category.label %></r:Content>
			</r:Label>
		</l:Category>
<% end %>

</l:CategoryScheme>
