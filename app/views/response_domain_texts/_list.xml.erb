<r:ManagedRepresentationScheme versionDate="<%= DateTime.now %>">
	<r:URN>urn:ddi:<%= @instance.agency %>:<%= @instance.managed_text_representation_scheme_urn_id %>:<%= @instance.version %></r:URN>
	<r:ManagedRepresentationSchemeName><r:String  xml:lang="en-GB"><%= instance.mrep_text_scheme %></r:String></r:ManagedRepresentationSchemeName>

<% @response_domain_texts.each do |rdt| %>
		<% if rdt.maxlen.present? %>
		  <r:ManagedTextRepresentation maxLength="<%= rdt.maxlen %>">
		<% else %>
		  <r:ManagedTextRepresentation>
		<% end %>
			<r:URN>urn:ddi:<%= @instance.agency %>:<%= rdt.urn_id %>:<%= @instance.version %></r:URN>
			<r:Label>
			  <r:Content xml:lang="en-GB"><%= rdt.label %></r:Content>
			</r:Label>
		</r:ManagedTextRepresentation>
<% end %>

</r:ManagedRepresentationScheme>
