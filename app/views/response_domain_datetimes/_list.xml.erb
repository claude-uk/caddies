<r:ManagedRepresentationScheme versionDate="<%= DateTime.now %>">
	<r:URN>urn:ddi:<%= @instance.agency %>:<%= @instance.managed_datetime_representation_scheme_urn_id %>:<%= @instance.version %></r:URN>
	<r:ManagedRepresentationSchemeName><r:String  xml:lang="en-GB"><%= instance.mrep_dt_scheme %></r:String></r:ManagedRepresentationSchemeName>

<% @response_domain_datetimes.each do |rdd| %>
		<r:ManagedDateTimeRepresentation>
			<r:URN>urn:ddi:<%= @instance.agency %>:<%= rdd.urn_id %>:<%= @instance.version %></r:URN>
			<r:Label>
			  <r:Content xml:lang="en-GB"><%= rdd.label %></r:Content>
			</r:Label>
			<r:DateFieldFormat><%= rdd.format %></r:DateFieldFormat>
			<r:DateTypeCode><%= rdd.datetime_type.label %></r:DateTypeCode>
		</r:ManagedDateTimeRepresentation>
<% end %>

</r:ManagedRepresentationScheme>
