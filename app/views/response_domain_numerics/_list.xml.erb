<r:ManagedRepresentationScheme versionDate="<%= DateTime.now %>">
	<r:URN>urn:ddi:<%= @instance.agency %>:<%= @instance.managed_numeric_representation_scheme_urn_id %>:<%= @instance.version %></r:URN>
	<r:ManagedRepresentationSchemeName><r:String  xml:lang="en-GB"><%= instance.mrep_num_scheme %></r:String></r:ManagedRepresentationSchemeName>

<% @response_domain_numerics.each do |rdn| %>
		<r:ManagedNumericRepresentation>
			<r:URN>urn:ddi:<%= @instance.agency %>:<%= rdn.urn_id %>:<%= @instance.version %></r:URN>
			<r:Label>
			  <r:Content xml:lang="en-GB"><%= rdn.label %></r:Content>
			</r:Label>
			<r:NumberRange>
			  <% if rdn.min.present? %>
			    <r:Low><%= rdn.min %></r:Low>
			  <% end %>
			  <% if rdn.max.present? %>
			    <r:High><%= rdn.max %></r:High>
			  <% end %>
			</r:NumberRange>
			<r:NumericTypeCode><%= rdn.numeric_type.label %></r:NumericTypeCode>
		</r:ManagedNumericRepresentation>
<% end %>

</r:ManagedRepresentationScheme>
